#include <iostream>
using namespace std;
int main(){
    char a;
    cout<<"ingrese una vocal :";cin>>a;
    if(a == 'A' || a == 'E' || a == 'I'|| a == 'O' || a == 'U'){
        cout<<"la vocal es Mayúscula:"<<endl;
    }else if (a == 'a' || a == 'e' || a == 'i' || a == 'o' || a == 'u'){
        cout<<"la vocal es minúscula:"<<endl;
    }else{cout<<"no es una vocal"<<endl;
}
}
